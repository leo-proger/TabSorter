<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.github.leo_proger.tab_sorter</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Tab Sorter</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/leo-proger">Leo Proger</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        <h1>TabSorter</h1>

        <h2>Overview</h2>
        <p>Tired of IntelliJ IDEA opening files wherever it wants? You can forget about that.<br>
        This IntelliJ IDEA plugin allows you to sort open tabs in the editor window.</p>

        <p>Put your workplace in order with this addon!</p>

        <p><strong>Available criteria for sorting</strong>:</p>
        <ul>
          <li>By alphabet</li>
          <li>By extension (and alphabetically internally)</li>
          <li>By package (and alphabetically internally)</li>
        </ul>

        <h2>Example</h2>
        <p>Before:<br>
        <img width="1978" height="462" alt="image" src="https://github.com/user-attachments/assets/62081961-2eb0-43ee-9267-1b81fca442c3" />
        </p>

        <p>After by package sorting:<br>
        <img width="1974" height="458" alt="image" src="https://github.com/user-attachments/assets/aed8310f-66bb-4a45-8555-2be4965594fb" />
        </p>

        <p>After by name sorting:<br>
        <img width="1986" height="462" alt="image" src="https://github.com/user-attachments/assets/d7dc3840-de3c-41e6-8046-57896fecb37d" />
        </p>

        <h1>Usage</h1>
        <p>Right click on any tab:<br>
        <img width="1966" height="292" alt="image" src="https://github.com/user-attachments/assets/8e863b8e-fab2-43b3-9c34-c03b8047e0c0" />
        </p>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <group id="TabSorterGroup"
               text="Sort Tabs"
               description="Sort editor tabs by various criteria"
               popup="true">

            <action id="com.github.leo_proger.tab_sorter.SortTabsByName"
                    class="com.github.leo_proger.tab_sorter.SortTabsByName" text="By Alphabet"
                    description="Sort open tabs alphabetically">
            </action>
            <action id="com.github.leo_proger.tab_sorter.SortTabsByExtension"
                    class="com.github.leo_proger.tab_sorter.SortTabsByExtension" text="By Extension"
                    description="Sort open tabs by extension">
            </action>
            <action id="com.github.leo_proger.tab_sorter.SortTabsByPackage"
                    class="com.github.leo_proger.tab_sorter.SortTabsByPackage" text="By Package"
                    description="Sort open tabs by package">
            </action>

            <add-to-group group-id="EditorTabPopupMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>