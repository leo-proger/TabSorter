<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.github.leo_proger.tab_sorter</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Tab Sorter</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/leo-proger">Leo Proger</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <group id="TabSorterGroup"
               text="Sort Tabs"
               description="Sort editor tabs by various criteria"
               popup="true">

            <action id="com.github.leo_proger.tab_sorter.SortTabsByName"
                    class="com.github.leo_proger.tab_sorter.SortTabsByName" text="By Alphabet"
                    description="Sort open tabs alphabetically">
            </action>
            <action id="com.github.leo_proger.tab_sorter.SortTabsByExtension"
                    class="com.github.leo_proger.tab_sorter.SortTabsByExtension" text="By Extension"
                    description="Sort open tabs by extension">
            </action>
            <action id="com.github.leo_proger.tab_sorter.SortTabsByPackage"
                    class="com.github.leo_proger.tab_sorter.SortTabsByPackage" text="By Package"
                    description="Sort open tabs by package">
            </action>

            <add-to-group group-id="EditorTabPopupMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>